---
const { title } = Astro.props;
---

<style>
  .window__topbar {
    background-color: #eee;
    border-radius: 0.40363rem 0.40363rem 0 0;
    border: 0.718px solid #dbdbdb;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    justify-items: center;
    align-content: center;
    justify-content: center;
    padding: 0.4rem 0.9rem;
    gap: .5rem;
  }

  .window__btns {
    justify-self: start;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    gap: 0.28rem;
  }

  .window__btn {
    width: 0.7rem;
    height: 0.7rem;
    border-radius: 50%;
    display: grid;
    place-items: center;
    padding: 0.15rem;
  }

  .window__btn__svg {
    display: none;
  }

  .window__btn:hover .window__btn__svg {
    display: block;
  }

  .btn__close {
    background-color: #ff6254;
    border: #d64336 solid 0.5px;
  }

  .btn__gone {
    background-color: #fcbf01;
    border: #d5a101 solid 0.5px;
  }

  .btn__min {
    background-color: #01d227;
    border: #019f1d solid 0.5px;
  }

  .window__title {
    text-transform: capitalize;
    white-space: nowrap;
    font-size: var(--fs-sm);
  }

  @media only screen and (min-width: 40em) {
    .window__btn {
      width: 1rem;
      height: 1rem;
      padding: 0.15rem;
    }
  }
</style>

