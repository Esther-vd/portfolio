---
import { Picture } from "astro:assets";
const { title, img, width, height, extraClass } = Astro.props;
---

<style>
  .selected {
    z-index: 2;
    width: fit-content;
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    gap: 0.4rem;
  }

  .selected__container {
    position: relative;
  }

  .selected__corner {
    position: absolute;
    width: 0.75rem;
    height: 0.75rem;
    border: 3px solid var(--primary);
    background-color: var(--white);
  }

  .selected__corner--top-left {
    top: -0.3rem;
    left: -0.3rem;
  }

  .selected__corner--bottom-left {
    bottom: -0.3rem;
    left: -0.3rem;
  }

  .selected__corner--bottom-right {
    bottom: -0.3rem;
    right: -0.3rem;
  }

  .selected__corner--top-right {
    top: -0.3rem;
    right: -0.3rem;
  }

  .selected__img {
    border: 3px solid var(--primary);
  }

  .selected__size {
    padding: 0.2rem 0.8rem;
    background-color: var(--primary);
    color: var(--white);
    border-radius: 0.15rem;
    font-size: var(--fs-sm);
  }
</style>

<div class=`selected ${extraClass && extraClass}`>
  <div class="selected__container">
    <div class="selected__corner selected__corner--top-left"></div>
    <div class="selected__corner selected__corner--top-right"></div>
    <div class="selected__corner selected__corner--bottom-left"></div>
    <div class="selected__corner selected__corner--bottom-right"></div>
    <Picture class="selected__img" src={img} alt={title} />
  </div>
  <p class="selected__size text--computer text--center">{width} x {height}</p>
</div>
